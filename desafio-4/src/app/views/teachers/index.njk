{% extends "layout.njk" %}

{% block content %}
   <section class="content">
      <div class="container">
         <div class="card table-content">
            <div class="header">
               <a class="button" href="/teachers/create">Novo</a>
               <form action="/teachers" method="GET">
                  <input type="text" name="filter" value="{{filter}}" placeholder="Nome ou Atendimento">
                  <button type="submit">Buscar</button>
               </form>
            </div>

            <table width="100%"><!--para criaçao de tabelas-->
               <thead><!--cabesalho-->
                  <tr><!--linhas-->
                     <th>Professor(a)</th><!--colunas-->
                     <th>Atendimento</th>
                     <th>Alunos</th>
                     <th>Ação</th>
                  </tr>
               </thead>
               <tbody><!--corpo da tabela-->
                  {% for teacher in teachers %}
                     <tr>
                        <td>
                           <span style="background-image: url({{teacher.avatar_url}})"></span>
                           {{teacher.name}}</td>
                           <td>{{teacher.subjects_taught}}</td>  
                           <td>{{teacher.total_students}}</td>  
                        <td><a href="/teachers/{{teacher.id}}">Ver</a></td>
                     </tr>
                  {% endfor %}
               </tbody>
            </table>
            
            <div class="pagination"
               data-page={{pagination.page}}
               data-total={{pagination.total}}
               data-filter={{filter}}
            ></div>
         </div><!--card table-content-->
      </div><!--container-->
   </section><!--content-->

{% endblock content %}
